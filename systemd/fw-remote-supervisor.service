[Unit]
Description=FW Cycle Monitor Remote Supervisor API
After=network.target
Requires=fw-cycle-monitor.service

[Service]
Type=simple
Environment=FW_CYCLE_MONITOR_CONFIG_DIR=/etc/fw-cycle-monitor
WorkingDirectory=/opt/fw-cycle-monitor
ExecStart=/opt/fw-cycle-monitor/.venv/bin/python -m fw_cycle_monitor.remote_supervisor.server --reload-settings
User=fwmonitor
Group=fwmonitor
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
